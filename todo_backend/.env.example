# Persistence backend: 'memory' (default) or 'sqlite'
PERSISTENCE_BACKEND=memory

# SQLite database path (used when PERSISTENCE_BACKEND=sqlite)
SQLITE_DB_PATH=./data/todos.db

# CORS allowed origins: '*' or a comma-separated list (e.g., "http://localhost:3000,https://example.com")
CORS_ALLOW_ORIGINS=*
