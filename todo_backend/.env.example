# Backend settings
PERSISTENCE_BACKEND=memory
SQLITE_DB_PATH=./data/todos.db

# CORS
# Use "*" to allow all origins or provide a comma-separated list
CORS_ALLOW_ORIGINS=*

# Optional HTTP Basic Authentication
# Set to "true" to enable, otherwise leave as false or unset (no auth by default)
ENABLE_BASIC_AUTH=false
# When ENABLE_BASIC_AUTH=true, set both username and password:
# BASIC_AUTH_USERNAME=admin
# BASIC_AUTH_PASSWORD=secret
